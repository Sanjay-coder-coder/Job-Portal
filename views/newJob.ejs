<%- include('layouts/layout') %>
    <h2>Post a New Job</h2>
    <form action="/jobs" method="POST">
        <input type="text" name="jobDesignation" placeholder="Job Title" required>
        <input type="text" name="companyName" placeholder="Company Name" required>
        <input type="text" name="jobLocation" placeholder="Location" required>
        <input type="text" name="salary" placeholder="Salary" required>
        <input type="text" name="applyBy" placeholder="Application Deadline" required>
        <input type="text" name="skillsRequired" placeholder="Skills Required (comma separated)" required>
        <input type="number" name="numberOfOpenings" placeholder="Number of Openings" required>
        <button type="submit">Post Job</button>
    </form>